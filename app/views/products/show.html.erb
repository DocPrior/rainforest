<%=link_to("Edit", edit_product_path(@product.id)) %> |
<%=link_to("Delete", product_path(@product.id), method: :delete, data: {confirm: "Are you sure you want to delete?"}) %>

<p><%=@product.name%>, <%=@product.description%>, <%=@product.price_in_dollars%></p>


